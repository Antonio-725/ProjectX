<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient3"
    tools:context=".ui.login.Admin">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_appbar_background"
        android:padding="16dp">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="0dp"
            android:textAlignment="center"
            app:title="Admin Dashboard"
            app:titleCentered="false"
            app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:animateLayoutChanges="true">

            <!-- Members Section with Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/membersCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/ripple_color"
                android:stateListAnimator="@animator/card_lift"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_profile"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/primary_color" />

                        <TextView
                            android:id="@+id/membersTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group Members"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                            android:textColor="@color/primary_color" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/groupMembersRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:scrollbars="none"
                        android:clipToPadding="false"
                        android:paddingVertical="8dp"
                        android:overScrollMode="never" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions Grid with Animation -->
            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/membersCard"
                app:columnCount="2"
                android:layout_marginTop="8dp">

                <!-- User Management Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/userManagementCard"
                    style="@style/DashboardCard"
                    android:layout_margin="8dp"
                    app:layout_columnWeight="1">

                    <LinearLayout
                        style="@style/DashboardCardContent">

                        <ImageView
                            style="@style/DashboardIcon"
                            app:tint="@color/primary_color"
                            android:src="@drawable/ic_profile" />

                        <TextView
                            style="@style/DashboardTitle"
                            android:text="UserManagement" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/viewEditUsersButton"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="wrap_content"
                            android:backgroundTint="@color/primary_color"
                            android:layout_height="wrap_content"
                            android:text="Manage"
                            android:textAllCaps="false"
                            app:elevation="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Savings Updates Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/savingsUpdateCard"
                    style="@style/DashboardCard"
                    android:layout_margin="8dp"
                    app:layout_columnWeight="1">

                    <LinearLayout
                        style="@style/DashboardCardContent">

                        <ImageView
                            style="@style/DashboardIcon"
                            android:src="@drawable/investation" />

                        <TextView
                            style="@style/DashboardTitle"
                            android:text="Savings Updates" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/updateSavingsButton"
                            android:backgroundTint="@color/primary_color"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update"
                            android:textAllCaps="false"
                            app:elevation="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Statistics Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/statisticsCard"
                    style="@style/DashboardCard"
                    android:layout_margin="8dp"
                    app:layout_columnWeight="1">

                    <LinearLayout
                        style="@style/DashboardCardContent">

                        <ImageView
                            style="@style/DashboardIcon"
                            android:src="@drawable/barchart" />

                        <TextView
                            style="@style/DashboardTitle"
                            android:text="Statistics" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/calculateStatsButton"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="wrap_content"
                            android:backgroundTint="@color/primary_color"
                            android:layout_height="wrap_content"
                            android:text="View"
                            android:textAllCaps="false"
                            app:elevation="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Reminders Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/reminderCard"
                    style="@style/DashboardCard"
                    android:layout_margin="8dp"
                    app:layout_columnWeight="1">

                    <LinearLayout
                        style="@style/DashboardCardContent">

                        <ImageView
                            style="@style/DashboardIcon"
                            app:tint="@color/primary_color"
                            android:src="@drawable/ic_notification" />

                        <TextView
                            style="@style/DashboardTitle"
                            android:text="Reminders" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/sendRemindersButton"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="wrap_content"
                            android:backgroundTint="@color/primary_color"
                            android:layout_height="wrap_content"
                            android:text="Send"
                            android:textAllCaps="false"
                            app:elevation="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.gridlayout.widget.GridLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>