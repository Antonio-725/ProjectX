    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <!-- Use your defined ToolbarTitle for title text appearance -->
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
        <!-- Use a dark modeâ€“friendly background. This attribute should resolve properly in both modes -->
        <item name="android:background">?attr/colorPrimary</item>
        <!-- Optionally adjust popup theme for menu items -->
        <item name="popupTheme">@style/ThemeOverlay.Material3.ActionBar</item>
    </style>


    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Set status bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Light icons for dark backgrounds -->
    </style>

